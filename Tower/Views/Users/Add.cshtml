@{
}
<link rel="stylesheet" href="/css/Users/Add.css" asp-append-version="true"/>
@model User
@Html.AntiForgeryToken()
<div class="page-center">
	<div class="page-center-in">
		<div class="container-fluid">
			<form asp-action="Add" class="sign-box validate" method="POST">
				<b class="sign-title">Cadastro de novo usuário</b>
				<div class="div-dados">
					<div class="form-group">
						<input type="text" class="form-control" placeholder="Nome" asp-for="Nome" required>
					</div>
					<div class="form-group">
						<input type="text" class="form-control" placeholder="E-mail" asp-for="Email" required>
					</div>
					<div class="form-group">
						<input type="password" class="form-control" placeholder="Senha" asp-for="Password" required>
					</div>
				</div>
				<div class="Login-botao">
					<input type="hidden" captcha name="captcha" value="" />
					<button class="btn btn-success" type="submit">Cadastrar</button>
				</div>
			</form>
		</div>
	</div>
</div>